	$(SKIA_UTILS_CXX_SRC) \
	$(NULL)

SKIA_OBJS=$(patsubst %.cpp,%.o,$(SKIA_SRC))

.PHONY: all

all:	skia.dummy

skia.dummy:	libskia.a
	touch $@

%.o:	%.cpp
	mkdir -p `dirname $@` && $(CXX) -c $(CXXFLAGS) -o $@ $<

libskia.a: $(SKIA_OBJS)
	$(AR) rcs $@ $(SKIA_OBJS)

.PHONY: clean

clean:
	rm -f *.o *.a */*/*.o

